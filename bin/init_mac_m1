#!/bin/bash

#
# This script aims to install nessary softwares for setup develop environment on MacOS with apple processers
#

# install homebrew
#/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

echo "install homebrew success, please set export HOMEBREW_NO_ANALYTICS=1 to disable brew analytics"

# install item2 https://formulae.brew.sh/cask/iterm2
brew install --cask iterm2

# install vscode
brew install --cask visual-studio-code

brew install autojump jq
